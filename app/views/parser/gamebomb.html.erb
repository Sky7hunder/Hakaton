<h1>Listing Topics</h1>
<table class="table table-striped table-hover ">
  <thead>
  <tr class="info">
    <th>Image</th>
    <th>Title</th>
    <th>DateCreate</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @doc.css(@article_css_class).each do |article| %>
    <tr>
      <td style="width: 100px;"><img style="width: 100px;" src="http://gamebomb.ru<%= article.css('img').attr('src').text %>" alt="<%= article.css('img').attr('alt').text %>"></td>
      <td style="max-width: 50px;"><%= article.css(@article_header_css_class).text %></td>
      <td style="max-width: 50px;"><%= article.css(@article_date_css_class).text %></td>
      <td style="max-width: 50px;"><p><%= article.css(@article_text_css_class).text %></p></td>
    </tr>
  <% end %>
  </tbody>
</table>

